<nav class="nav">
  <div class="container">
    <div class="logo">
      <%= link_to root_path do %>
        <%= image_tag image_path("placeholder-logo"), class: "logo-image" %>
      <% end %>
    </div>
    <div id="mainListDiv" class="main_list">

      <ul class="navlinks">
        <% if user_signed_in? %>
          <li>
            <%= link_to "Home", root_path, class: "#{'none-home-page' if !current_page?(root_path)}" %>
          </li>
          <li>
            <%= link_to "Events", events_path, class: "#{'none-home-page' if !current_page?(root_path)}" %>
          </li>
          <li>
            <%= link_to "Shops", shops_path, class: "#{'none-home-page' if !current_page?(root_path)}" %>
          </li>
          <li>
            <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "#{'none-home-page' if !current_page?(root_path)}" %>
          </li>
        <% else %>
          <li>
            <%= link_to "Login", new_user_session_path, class: "#{'none-home-page' if !current_page?(root_path)}" %>
          </li>
        <% end %>
        <li>
          <div id="cart-icon">
            <% cart_styles = !current_page?(root_path) ? 'fa-solid fa-cart-shopping none-home-page' : 'fa-solid fa-cart-shopping' %>
            <%= link_to cart_path(@cart) do %>
              <i class="<%= cart_styles %>" data-action="mouseover->cart#revealCart mouseout->cart#hideCart"></i>
            <% end %>
            <p><%#= @cart.num_items %></p>
          </div>
        </li>
      </ul>


      <span class="navTrigger">
        <i></i>
        <i></i>
        <i></i>
      </span>
    </div>
  </div>
</nav>
